@{
    ViewData["Title"] = "Home Notifycation";
}
@using Test.GoogleNotification.Bsl.Models
@model UserModel

@if (string.IsNullOrEmpty(Model.SubscribeToken))
{
    <div class="text-center">
        <div class="row">
            <div class="col-12">
                Your IP : <b>@Model?.IpAddress</b>
            </div>
        </div>
        <div class="row" style="margin-top: 25px">
            <div class="col-12">
                <button class="btn btn-success" id="btnSubscribe"> Click to subscribe</button>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <div class="row">
            <table class="table">
                <tbody>
                    <tr>
                        <td colspan="2"><b>Thank you for subscribing to my app.</b></td>
                    </tr>
                    <tr>
                        <td style="width: 150px;text-align: right; font-weight: bold">Your IP:</td>
                        <td style="text-align: left;">@Model.IpAddress</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;font-weight: bold">Created date:</td>
                        <td style="text-align: left;">@Model.CreatedDateFormat</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;font-weight: bold">Your token:</td>
                        <td style="text-align: left;">@Model.SubscribeToken</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}


@section Scripts{
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-messaging.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-analytics.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-firestore.js"></script>
    <script src="~/js/site.js"></script>
}